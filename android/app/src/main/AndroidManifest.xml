<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 若之後要載圖片/呼叫 API 會用到 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drinks"
        android:usesCleartextTraffic="true">

        <!-- 🔰 改用 LoginActivity 當啟動頁 -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 其餘頁面（無 intent-filter，不必 exported） -->
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.ProductListActivity" />
        <activity android:name=".ui.ProductDetailActivity" />
        <activity android:name=".ui.CartActivity" />
        <activity android:name=".ui.CheckoutActivity" />
        <activity android:name=".ui.SuccessActivity" />
    </application>

</manifest>
