<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/nav_branch_list">

            <!-- 飲品 tab：先到選分店頁 -->
            <fragment
                android:id="@+id/nav_branch_list"
            android:name="com.example.drinks.ui.SelectStoreFragment"
            android:label="選分店">
            <action
                android:id="@+id/action_to_product_list"
                app:destination="@id/dest_product_list" />
        </fragment>

            <!-- 產品清單（非底部 tab，屬於「飲品」流程內頁） -->
        <fragment
        android:id="@+id/dest_product_list"
        android:name="com.example.drinks.ui.ProductListFragment"
        android:label="選飲料" />

<!--             其他頂層頁面，id 也要對齊 menu -->
        <fragment
        android:id="@+id/nav_orders"
        android:name="com.example.drinks.ui.OrdersFragment"
        android:label="訂單" />

        <fragment
        android:id="@+id/nav_cart"
        android:name="com.example.drinks.ui.CartFragment"
        android:label="購物車" />

        <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.drinks.ui.ProfileFragment"
        android:label="我的" />

        <fragment
        android:id="@+id/nav_other"
        android:name="com.example.drinks.ui.OtherFragment"
        android:label="其他" />
            </navigation>

