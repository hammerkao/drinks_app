<resources>
    <!-- 用 MDC 的 BottomNavigationView，避免 M3 style 名稱解析問題 -->
    <style name="Widget.Drinks.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView">

        <!-- 圖示 / 文字色票（選中=brand_gold，未選=灰） -->
        <item name="itemIconTint">@color/bnv_icon_tint</item>
        <item name="itemTextColor">@color/bnv_text_tint</item>
        <item name="itemRippleColor">@color/bnv_ripple</item>

        <!-- ⚠️ 刪掉這行：itemActiveIndicatorStyle（M2 沒有膠囊） -->
        <!-- <item name="itemActiveIndicatorStyle">@style/Widget.Drinks.BottomNavigation.ActiveIndicator</item> -->

        <item name="itemIconSize">@dimen/bnv_icon_size</item>
        <item name="android:paddingTop">@dimen/bnv_padding_v</item>
        <item name="android:paddingBottom">@dimen/bnv_padding_v</item>
    </style>
</resources>
