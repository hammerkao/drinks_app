<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 頂部 Toolbar：底色 brand_gold、字白 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="40dp"
        android:background="@color/brand_gold">

        <!-- 自訂返回鍵 -->
        <ImageButton
            android:id="@+id/btnNavBack"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:srcCompat="@drawable/ic_arrow_back_24"
            app:tint="@android:color/white" />

        <!-- 置中標題 -->
        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="訂單結算"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp" />
    </com.google.android.material.appbar.MaterialToolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 店家資訊 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_store_card"
                android:padding="12dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:text="桃園楊梅店"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvStorePhone"
                    android:text="電話：02-12345678"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvStoreAddress"
                    android:text="地址：桃園市楊梅區XX路XX號"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvStoreHours"
                    android:text="營業時間：09:00 - 22:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- 提示文字 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    app:srcCompat="@drawable/exclamation" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="請再次確認餐點和訂單內容是否正確"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <!-- 餐點列表（可展開） -->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_store_card"
                android:padding="12dp">

                <TextView
                    android:text="餐點內容"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/previewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"/>

                <ImageButton
                    android:id="@+id/btnToggleItems"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="@android:color/darker_gray" />
            </LinearLayout>

            <!-- 訂單內容 -->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_store_card"
                android:padding="12dp">

                <TextView
                    android:text="訂單內容"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 訂單內容區塊內的明細列，逐行貼上即可 -->
                <TextView
                    android:id="@+id/tvPickupMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取餐方式：自取"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvPickupTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="取餐時間：2025/09/22 13:45"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvBuyerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="訂購人：王大明"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvBuyerPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="聯絡電話：0988123444"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="付款方式：現金"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvOrderNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="訂單備註：—"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />


                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="應付金額：$125"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_store_card">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnModify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/button_text"
            android:textColor="@android:color/white"
            android:text="修改" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="送出訂單"
            app:backgroundTint="@color/brand_gold"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
