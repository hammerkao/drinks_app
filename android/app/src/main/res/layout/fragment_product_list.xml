<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp">

        <!-- 上方 Header -->
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBack"
                android:text="回分店"
                android:textSize="14sp" android:textColor="#666666"
                android:paddingRight="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvStoreName"
                android:text="店名"
                android:textStyle="bold" android:textSize="24sp"
                android:textColor="#222222"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- 商品列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="12dp" android:paddingBottom="72dp"
            android:clipToPadding="false"/>
    </LinearLayout>

    <!-- Loading / Error / Empty -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/errorView"
        android:visibility="gone"
        android:gravity="center" android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
            android:id="@+id/errorText" android:text="載入失敗"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/emptyView"
        android:visibility="gone" android:text="目前沒有商品"
        android:layout_gravity="center" android:padding="16dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</FrameLayout>
